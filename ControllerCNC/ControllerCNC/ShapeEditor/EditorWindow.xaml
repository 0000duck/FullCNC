<Window x:Class="ControllerCNC.ShapeEditor.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:e="clr-namespace:ControllerCNC.ShapeEditor"
        Title="Editor" WindowState="Maximized" WindowStyle="None" Width="750" Height="500">
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <DockPanel LastChildFill="True">
                <Border Width="200" Background="LightBlue" >
                    <StackPanel Orientation="Vertical">
                        <TextBlock>Toolbox</TextBlock>
                        <TextBlock>Toolbox2</TextBlock>
                    </StackPanel>
                </Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Row="0" Grid.Column="0" Background="Red" Name="Facet1">

                    </Canvas>
                    <Canvas Grid.Row="1" Grid.Column="0" Background="Blue" Name="Facet2">

                    </Canvas>
                    <e:TrackballDecorator x:Name="Trackball" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                        <Viewport3D Name="View3D">
                            <Viewport3D.Camera>
                                <PerspectiveCamera x:Name="camMain" Position="0 0 -10" LookDirection="0 0 10">
                                </PerspectiveCamera>
                            </Viewport3D.Camera>
                            <ModelVisual3D>
                                <ModelVisual3D.Content>
                                    <DirectionalLight x:Name="dirLightMain" Direction="0,0,10"/>
                                </ModelVisual3D.Content>
                            </ModelVisual3D>                         
                        </Viewport3D>
                    </e:TrackballDecorator>
                </Grid>
            </DockPanel>
        </Grid>
    </Viewbox>
</Window>
